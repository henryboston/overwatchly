extends ../../layouts/default

block intro
	.back-bar
		.container: .row: .col-sm-10.col-sm-offset-1.col-md-8.col-md-offset-2
			.xs-right: a(href='/vods').text-muted &larr; Back to POV VODs


block content
	.container: .row: .col-sm-10.col-sm-offset-1.col-md-8.col-md-offset-2
		article.full-post
			if !link
				h2 Invalid VOD.
			else
				header
					h1.mb-0= link.label
					br 
					//h4.blog-post__author Shared
						if link.publishedDate
							|  on #{moment(link.publishedDate).format('MMMM D, YYYY')}
					//- sharing buttons
					//.share-buttons
						//span.share-button
							.fb-like(data-href="http://www.sydjs.com/blog/link/" + link.slug, data-colorscheme="light", data-layout="button_count", data-action="like", data-show-faces="false", data-send="false")
						span.share-button
							a(href="https://twitter.com/share", data-via="overwatchly", data-hashtags="overwatch", data-count="button", data-dnt="true").twitter-share-button Tweet
						span.share-button
							.g-plusone(data-size="medium")
				div.poviFrame
					iframe(src=link.href, allowfullscreen, frameborder='0')